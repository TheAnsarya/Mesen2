<Window
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:m="clr-namespace:Nexen"
	xmlns:vm="using:Nexen.ViewModels"
	xmlns:v="using:Nexen.Views"
	xmlns:c="using:Nexen.Controls"
	xmlns:l="using:Nexen.Localization"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="Nexen.Windows.HistoryViewerWindow"
	Width="512" Height="535"
	Icon="/Assets/HistoryViewer.png"
	Title="{l:Translate wndTitle}"
  x:DataType="vm:HistoryViewerViewModel"
	Name="root"
>
	<Design.DataContext>
		<vm:HistoryViewerViewModel />
	</Design.DataContext>
	
	<DockPanel>
		<c:NexenMenu DockPanel.Dock="Top" Name="ActionMenu">
			<MenuItem Header="{l:Translate mnuFile}" ItemsSource="{Binding FileMenuItems}" />
			<MenuItem Header="{l:Translate mnuOptions}" ItemsSource="{Binding OptionsMenuItems}" />
		</c:NexenMenu>

		<Border Name="ControlBar" BorderBrush="{StaticResource NexenGrayBorderColor}" BorderThickness="0 1 0 0" DockPanel.Dock="Bottom">
			<DockPanel HorizontalAlignment="Stretch" Margin="5 0 5 0">
				<c:IconButton DockPanel.Dock="Left" Icon="Assets/MediaPlay.png" Width="40" Height="30" Margin="0 0 10 0" IsVisible="{Binding IsPaused}" Command="{Binding TogglePause}" />
				<c:IconButton DockPanel.Dock="Left" Icon="Assets/MediaPause.png" Width="40" Height="30" Margin="0 0 10 0" IsVisible="{Binding !IsPaused}" Command="{Binding TogglePause}" />

				<StackPanel DockPanel.Dock="Right" VerticalAlignment="Center" Margin="15 0 0 0">
					<c:NexenSlider
					  Minimum="0"
					  Maximum="100"
					  Value="{Binding Config.Volume}"
						Width="100"
						TickFrequency="10"
						HideValue="True"
						Margin="0 -10 0 0"
					/>
					<TextBlock Text="{l:Translate lblVolume}" HorizontalAlignment="Center" Margin="0 -4 0 0" />
				</StackPanel>
			
				<TextBlock MinWidth="30" Text="{Binding TotalTimeText}" DockPanel.Dock="Right" VerticalAlignment="Center" Margin="5 0 10 0" />
				<TextBlock Text=" / " DockPanel.Dock="Right" VerticalAlignment="Center" />
				<TextBlock MinWidth="30" Text="{Binding CurrentTimeText}" DockPanel.Dock="Right" VerticalAlignment="Center" Margin="20 0 5 0" />

				<Slider
					Minimum="0"
					Maximum="{Binding MaxPosition}"
					Value="{Binding CurrentPosition}"
					Margin="0 10 0 0"
					VerticalAlignment="Center"
				/>
			</DockPanel>
		</Border>

		<Panel Name="RendererPanel" Background="Black">
			<m:NativeRenderer Name="Renderer" HorizontalAlignment="Center" VerticalAlignment="Center" IsVisible="{Binding !IsSoftwareRendererVisible}" />
			
			<Panel IsVisible="{Binding IsSoftwareRendererVisible}">
				<c:SoftwareRendererView
					Name="SoftwareRenderer"
					DataContext="{Binding SoftwareRenderer}"
					Width="{Binding Width}"
					Height="{Binding Height}"
			  />
			</Panel>
		</Panel>
	</DockPanel>
</Window>
