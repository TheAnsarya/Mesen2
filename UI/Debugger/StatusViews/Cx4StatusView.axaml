<UserControl
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:du="using:Nexen.Debugger.Utilities"
	xmlns:vm="using:Nexen.Debugger.StatusViews"
	xmlns:c="using:Nexen.Controls"
	mc:Ignorable="d" d:DesignWidth="350"
	VerticalAlignment="Stretch"
	HorizontalAlignment="Stretch"
	x:DataType="vm:Cx4StatusViewModel"
	x:Class="Nexen.Debugger.StatusViews.Cx4StatusView"
>
	<Design.DataContext>
		<vm:Cx4StatusViewModel />
	</Design.DataContext>

	<UserControl.Styles>
		<StyleInclude Source="/Styles/DebugStatusStyles.xaml" />
	</UserControl.Styles>

	<ScrollViewer>
		<DockPanel>
			<StackPanel DockPanel.Dock="Top" IsEnabled="{Binding EditAllowed}">
				<WrapPanel MaxWidth="330" HorizontalAlignment="Left">
					<WrapPanel.Styles>
						<Style Selector="StackPanel > TextBlock">
							<Setter Property="MinWidth" Value="25" />
						</Style>
						<Style Selector="StackPanel > TextBox">
							<Setter Property="Margin" Value="0 1 3 1" />
						</Style>
					</WrapPanel.Styles>
					
					<StackPanel Orientation="Horizontal">
						<TextBlock>R0:</TextBlock>
						<c:NexenNumericTextBox Value="{Binding Reg0}" Hex="True" Max="0xFFFFFF" />
					</StackPanel>
					<StackPanel Orientation="Horizontal">
						<TextBlock>R1:</TextBlock>
						<c:NexenNumericTextBox Value="{Binding Reg1}" Hex="True" Max="0xFFFFFF" />
					</StackPanel>
					<StackPanel Orientation="Horizontal">
						<TextBlock>R2:</TextBlock>
						<c:NexenNumericTextBox Value="{Binding Reg2}" Hex="True" Max="0xFFFFFF" />
					</StackPanel>
					<StackPanel Orientation="Horizontal">
						<TextBlock>R3:</TextBlock>
						<c:NexenNumericTextBox Value="{Binding Reg3}" Hex="True" Max="0xFFFFFF" />
					</StackPanel>
					
					<StackPanel Orientation="Horizontal">
						<TextBlock>R4:</TextBlock>
						<c:NexenNumericTextBox Value="{Binding Reg4}" Hex="True" Max="0xFFFFFF" />
					</StackPanel>
					<StackPanel Orientation="Horizontal">
						<TextBlock>R5:</TextBlock>
						<c:NexenNumericTextBox Value="{Binding Reg5}" Hex="True" Max="0xFFFFFF" />
					</StackPanel>
					<StackPanel Orientation="Horizontal">
						<TextBlock>R6:</TextBlock>
						<c:NexenNumericTextBox Value="{Binding Reg6}" Hex="True" Max="0xFFFFFF" />
					</StackPanel>
					<StackPanel Orientation="Horizontal">
						<TextBlock>R7:</TextBlock>
						<c:NexenNumericTextBox Value="{Binding Reg7}" Hex="True" Max="0xFFFFFF" />
					</StackPanel>

					<StackPanel Orientation="Horizontal">
						<TextBlock>R8:</TextBlock>
						<c:NexenNumericTextBox Value="{Binding Reg8}" Hex="True" Max="0xFFFFFF" />
					</StackPanel>
					<StackPanel Orientation="Horizontal">
						<TextBlock>R9:</TextBlock>
						<c:NexenNumericTextBox Value="{Binding Reg9}" Hex="True" Max="0xFFFFFF" />
					</StackPanel>
					<StackPanel Orientation="Horizontal">
						<TextBlock>R10:</TextBlock>
						<c:NexenNumericTextBox Value="{Binding Reg10}" Hex="True" Max="0xFFFFFF" />
					</StackPanel>
					<StackPanel Orientation="Horizontal">
						<TextBlock>R11:</TextBlock>
						<c:NexenNumericTextBox Value="{Binding Reg11}" Hex="True" Max="0xFFFFFF" />
					</StackPanel>

					<StackPanel Orientation="Horizontal">
						<TextBlock>R12:</TextBlock>
						<c:NexenNumericTextBox Value="{Binding Reg12}" Hex="True" Max="0xFFFFFF" />
					</StackPanel>
					<StackPanel Orientation="Horizontal">
						<TextBlock>R13:</TextBlock>
						<c:NexenNumericTextBox Value="{Binding Reg13}" Hex="True" Max="0xFFFFFF" />
					</StackPanel>
					<StackPanel Orientation="Horizontal">
						<TextBlock>R14:</TextBlock>
						<c:NexenNumericTextBox Value="{Binding Reg14}" Hex="True" Max="0xFFFFFF" />
					</StackPanel>
					<StackPanel Orientation="Horizontal">
						<TextBlock>R15:</TextBlock>
						<c:NexenNumericTextBox Value="{Binding Reg15}" Hex="True" Max="0xFFFFFF" />
					</StackPanel>
				</WrapPanel>

				<Rectangle Stroke="{StaticResource NexenGrayBorderColor}" StrokeThickness="1" Margin="5 5 5 2" />

				<WrapPanel Margin="0 3 0 0">
					<StackPanel Orientation="Horizontal">
						<TextBlock>MDR:</TextBlock>
						<c:NexenNumericTextBox Value="{Binding RegMdr}" Hex="True" Max="0xFFFFFF" />
					</StackPanel>
					<StackPanel Orientation="Horizontal">
						<TextBlock>MAR:</TextBlock>
						<c:NexenNumericTextBox Value="{Binding RegMar}" Hex="True" Max="0xFFFFFF" />
					</StackPanel>
					<StackPanel Orientation="Horizontal">
						<TextBlock>DPR:</TextBlock>
						<c:NexenNumericTextBox Value="{Binding RegDpr}" Hex="True" Max="0xFFFFFF" />
					</StackPanel>
				</WrapPanel>

				<WrapPanel Margin="0 3">
					<StackPanel Orientation="Horizontal">
						<TextBlock>ROM:</TextBlock>
						<c:NexenNumericTextBox Value="{Binding RomBuffer}" Hex="True" Max="0xFFFFFF" />
					</StackPanel>
					<StackPanel Orientation="Horizontal">
						<TextBlock>RAM:</TextBlock>
						<c:NexenNumericTextBox Value="{Binding RamBuffer}" Hex="True" Max="0xFFFFFF" />
					</StackPanel>
				</WrapPanel>

				<WrapPanel>
					<StackPanel Orientation="Horizontal">
						<TextBlock>PB:</TextBlock>
						<c:NexenNumericTextBox Value="{Binding RegPb}" Hex="True" Max="0xFFFF" />
					</StackPanel>
					<StackPanel Orientation="Horizontal">
						<TextBlock>P:</TextBlock>
						<c:NexenNumericTextBox Value="{Binding RegP}" Hex="True" Max="0xFFFF" />
					</StackPanel>
					<StackPanel Orientation="Horizontal">
						<TextBlock>PC:</TextBlock>
						<c:NexenNumericTextBox Value="{Binding RegPc}" Hex="True" Max="0xFF" />
					</StackPanel>
					<StackPanel Orientation="Horizontal">
						<TextBlock>SP:</TextBlock>
						<c:NexenNumericTextBox Value="{Binding RegSp}" Hex="True" Max="7" />
					</StackPanel>
				</WrapPanel>
				
				<Rectangle Stroke="{StaticResource NexenGrayBorderColor}" StrokeThickness="1" Margin="5 5 5 2" />

				<WrapPanel Margin="0 2 0 0" DockPanel.Dock="Top">
					<StackPanel Orientation="Horizontal">
						<TextBlock>A:</TextBlock>
						<c:NexenNumericTextBox Value="{Binding RegA}" Hex="True" Max="0xFFFFFF" />
					</StackPanel>
					<WrapPanel>
						<StackPanel>
							<CheckBox IsChecked="{Binding FlagZero}" Content="Zero" />
							<CheckBox IsChecked="{Binding FlagCarry}" Content="Carry" />
						</StackPanel>
						<StackPanel>
							<CheckBox IsChecked="{Binding FlagNegative}" Content="Negative" />
							<CheckBox IsChecked="{Binding FlagOverflow}" Content="Overflow" />
						</StackPanel>
						<StackPanel>
							<CheckBox IsChecked="{Binding FlagIrq}" Content="IRQ" />
						</StackPanel>
					</WrapPanel>
				</WrapPanel>
			</StackPanel>
		</DockPanel>
	</ScrollViewer>
</UserControl>
